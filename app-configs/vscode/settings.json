// Vim
"vim.leader": "<Space>",
"vim.handleKeys": {
    "<C-b>": false,
    "<C-n>": false,
    "<C-p>": false,
},
"vim.normalModeKeyBindingsNonRecursive": [
    // Switch buffers
    { "before": ["<S-h>"], "commands": [":bp"] },
    { "before": ["<S-l>"], "commands": [":bn"] },

    // Splits
    { "before": ["leader", "v"], "commands": [":vsplit"] },
    { "before": ["leader", "s"], "commands": [":split"] },

    // Panes
    { "before": ["leader", "h"], "commands": ["workbench.action.focusLeftGroup"] },
    { "before": ["leader", "j"], "commands": ["workbench.action.focusBelowGroup"] },
    { "before": ["leader", "l"], "commands": ["workbench.action.focusRightGroup"] },
    { "before": ["leader", "k"], "commands": ["workbench.action.focusAboveGroup"] },

    // Move editors between panes
    { "before": ["leader", "<S-h>"], "commands": ["workbench.action.moveEditorToLeftGroup"]},
    { "before": ["leader", "<S-j>"], "commands": ["workbench.action.moveEditorToBelowGroup"]},
    { "before": ["leader", "<S-k>"], "commands": ["workbench.action.moveEditorToAboveGroup"]},
    { "before": ["leader", "<S-l>"], "commands": ["workbench.action.moveEditorToRightGroup"]},

    // file explorer
    { "before": ["leader", "e"], "commands": ["workbench.explorer.fileView.focus"] }
],
